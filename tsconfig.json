{
	"compilerOptions": {
		"target": "es5",
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react",
		"declaration": true,
		"pretty": true,
		"rootDir": "src",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"noFallthroughCasesInSwitch": true,
		"outDir": "lib",
		"lib": ["es2018", "dom"],
		"importHelpers": true
	},
	"exclude": ["dist", "lib", "esm", "node_modules", "types", "tests", "build"]
}
