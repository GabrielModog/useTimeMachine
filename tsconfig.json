{
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "build",
		"declarationDir": "build",
		"rootDir": "src",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
	"files": ["src/index.ts", "src/types.ts", "src/useTimeMachine.ts"],
	"exclude": ["node_modules", "build", "tests"],
	"include": ["src"]
}
